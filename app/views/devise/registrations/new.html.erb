
<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"signin") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <p class="title">Sign up</p>
  <div class="mail">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス"%>
    <i class="fa fa-envelope"></i>
  </div>

  <div class="password">
    <%= f.label :Password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード",class: "password__form" %>
    <i class="fa fa-key"></i>
  </div>

  <div class="password">
    <%= f.label :"確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード",class:"password__form" %>
    <i class="fa fa-check-square"></i>
  </div>

  <div class="actions">
    <i class="spinner"></i>
    <span class="button"><%= f.submit "Sign up",class:"submit" %></span>
  </div>
<% end %>
</div>
<div class="footer1">
  <%= render "devise/shared/links"%>
  <%= render "devise/shared/twitter" %>
</div>  

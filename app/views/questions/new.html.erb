<div class="main-contents">
  <header id="create">
    <h1>問題作成</h1>
    <div class="top">
      <a href="/" class="top__btn">トップページに戻る</a>
    </div>
  </header>
  <%= form_with model: @question,:url => {:questions => :new, :response => :new} do |f| %>
    <div class="submitn">
      <%= f.submit '作成', class: "submitn__btn"%>
          <%# <button type="submit" class="submitn__btn">作成</button> %>
    </div>
  <div class="form">
      <div class="box1">
        <span class="form-name1">問題</span>
        <div class="form-question">
          <%= f.text_area :body, class: 'form__control',placeholder: "問題文", size: "40x20" %>
        </div>
      </div> 
  </div> 
  
    <%= f.fields_for :response do |c| %>
      <div class="form">
          <div class="box2">
            <span class="form-name2">解答</span>

            <div class="form-answer">
              <%= c.text_area :body, class: 'form__aon',placeholder: "解答文", size: "40x20"%>
            </div>  
          </div>
        </div>
      </div>  
     <% end %> 
  <% end %>
</div>

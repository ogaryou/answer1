<div class="main">
  <h1 class="main__name"> 問題一覧　<h1>
  <div class="main__link">
    <div class="main__link__tag">
      <ul>
        <li>
          <a href="/qas/new" class="main__link__tag__name">新規作成</a>
          <a href="/" class="main__link__tag__name">ホーム画面</a>
        <li>
      </ul>
    </div>
  </div>
  <table class="main__table">
    <thead class="main__table__thead">
      <tr>
        <th>問題番号</th>
        <th>問題</th>
        <th>解答</th>
        <th>作成日時</th>
        <th>更新日時</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @qa.each do |qa|%>
        <tr>
          <td><%= qa.id %></td>
          <td><%= qa.body %></td>
          <td><%= qa.content %></td>
          <td><%= qa.created_at %></td>
          <td><%= qa.updated_at %></td>
          <td><%= link_to '削除',qas_destroy_path(qa.id),  method: :delete %></td>
        </tr> 
      <% end %>
    </tbody> 
  </table>
</div>
